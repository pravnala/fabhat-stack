---
import Navbar from "@/components/Navbar.astro";

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="description"
      content={description ? description : "UP Tau Rho Xi Online Directory"}
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Site Name | {title}</title>
  </head>
  <body
    class="antialiased"
    x-data="{'darkMode': localStorage.getItem('darkMode') ? JSON.parse(localStorage.getItem('darkMode')) : true }"
    x-init="darkMode = JSON.parse(localStorage.getItem('darkMode')); $watch('darkMode', value => localStorage.setItem('darkMode', JSON.stringify(value)))"
  >
    <div :class="{'dark': darkMode === true}">
      <div>
        <Navbar />
      </div>

      <div class="container mx-auto mt-[100px] mb-10 px-5">
        <slot />
      </div>
    </div>

    <!-- Flowbite CDN -->
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
    ></script>
  </body>
</html>
